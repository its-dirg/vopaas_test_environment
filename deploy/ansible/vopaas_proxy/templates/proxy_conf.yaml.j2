#--- SATOSA Config ---#
HOST: "{{ hostname }}"
PORT: {{ proxy_port }}
HTTPS: Yes
INTERNAL_ATTRIBUTES: 'internal_attributes.yaml'
COOKIE_STATE_NAME: "VOPAAS_STATE"
STATE_ENCRYPTION_KEY: "asdASD123"
PLUGIN_PATH:
  - "plugins/backends"
  - "plugins/frontends"
BACKEND_MODULES:
  - "saml2_backend"
  - "oidc_backend"
#  - "google_backend"
#  - "fb_backend"
FRONTEND_MODULES:
  - "saml2_frontend"
USER_ID_HASH_SALT: "61a89d2db0b9e1e27d490d050b478fe71f352fddd3528a44157f43e339c6c62d96172bf84233317"
CONSENT:
  enable: Yes
  rest_uri: "{{ cm_url }}"
  redirect: "{{ cm_url }}/consent"
  endpoint: "handle_consent"
  sign_key: "{{ proxy_server_sign_key }}"
  verify_ssl: No
ACCOUNT_LINKING:
  enable: Yes
  rest_uri: "{{ al_url }}"
  redirect: "{{ al_url }}/approve"
  endpoint: "handle_account_linking"
  sign_key: "pki/account_linking.key"
  verify_ssl: No

#--- Server Config ---#
SERVER_CERT: "{{ proxy_server_cert }}"
SERVER_KEY: "{{ proxy_server_key }}"
CERT_CHAIN: Null
STATIC_DIR: "/static"
LOG_FILE: "server.log"

# Beaker session configuration
# This session can be configured to use database, file, or memory
SESSION_OPTS:
    session.type: "memory"
    session.cookie_expires: Yes  # Expire when the session is closed
    session.auto: Yes
